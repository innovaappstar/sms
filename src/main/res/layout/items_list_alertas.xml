<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_row_selector"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@drawable/shape_row_selector">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_row_selector"
            android:id="@+id/contenedorFecha">
            <TextView
                style="@style/StyleTextoItem"
                android:textColor="@color/gris_suave_texto"
                android:id="@+id/txtNombremes"
                android:text="Nov"/>
            <TextView
                style="@style/StyleTextoItem"
                android:id="@+id/txtNumeroDia"
                android:textColor="@color/gris_fuerte"
                android:textSize="45sp"
                android:text="10"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/shape_row_selector"
            android:layout_toRightOf="@+id/contenedorFecha">

            <TextView
                style="@style/StyleTextoItem"
                android:textColor="@color/gris_fuerte"
                android:textSize="16sp"
                android:id="@+id/txtTipoAlerta"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Asalto"/>
            <TextView
                style="@style/StyleTextoItem"
                android:layout_below="@+id/txtTipoAlerta"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:id="@+id/txtFechaHora"
                android:text="13:41:25"/>

            <TextView
                style="@style/StyleTextoItem"
                android:id="@+id/txtEnviado"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Enviado"/>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>