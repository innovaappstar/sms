<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        style="@style/StyleEdittextContactoSms"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/editContacto"
        android:enabled="true"
        android:hint="Ingresar Contacto"/>

    <LinearLayout
        android:layout_below="@+id/editContacto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:weightSum="2">
        <Button
            style="@style/StyleButtonGestion"
            android:id="@+id/btnSustituirContactoManualmente"
            android:text="Sustituir"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight=".01"/>
        <Button
            style="@style/StyleButtonGestion"
            android:id="@+id/btnEliminarContactoManualmente"
            android:text="Eliminar"/>

    </LinearLayout>


</RelativeLayout>