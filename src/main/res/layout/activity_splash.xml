<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash2">

    <TextView
        style="@style/StyleTextoSplash"
        android:layout_above="@+id/txtUnirse"
        android:layout_marginBottom="100dp"
        android:textSize="44sp"
        android:textStyle="bold"
        android:text="Alerta SMS"/>
    <TextView
        style="@style/StyleTextoSplash"
        android:id="@+id/txtUnirse"
        android:layout_centerInParent="true"
        android:text="Unirse con"/>
    <ImageView
        style="@style/StyleImageSplash"
        android:id="@+id/imgSplashFacebook"
        android:layout_below="@+id/txtUnirse"
        android:visibility="gone"
        />
    <TextView
        style="@style/StyleTextoSplash"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:text="TÃ©rminos y condiciones"/>
    <com.facebook.widget.LoginButton
        android:id="@+id/login_button"
        style="@style/WidgetImageSplash"
        android:layout_below="@+id/txtUnirse"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        facebook:confirm_logout="false"
        facebook:fetch_user_info="true"
        />
</RelativeLayout>