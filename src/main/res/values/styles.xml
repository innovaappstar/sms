<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <!--
    ESTILOS 21/11/2015
    -->
    <!--
    ESTILOS SPLASH SCREEN
    -->
    <style name="StyleTextoSplash" parent="WidgetTextSplash">
    </style>

    <style name="WidgetTextSplash">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
    </style>


    <style name="StyleImageSplash" parent="WidgetImageSplash">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetImageSplash">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/shape_view_selector_fb</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!--
    ESTILOS BIENVENIDA
    -->
    <style name="StyleImageBienvenidaDetalle" parent="WidgetImageDetalle">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetImageDetalle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/ic_sms</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="StyleTextoBienvenida" parent="WidgetTextBienvenida">
    </style>

    <style name="WidgetTextBienvenida">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleButtonAceptar" parent="WidgetButtonAceptar">
    </style>

    <style name="WidgetButtonAceptar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_view_selector_button_general</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>


    <!--
    BIENVENIDA INFO
    -->
    <style name="StyleImageCentro" parent="WidgetImageCentro">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetImageCentro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--
    ITEMS LISTADO CONTACTOS
    -->
    <style name="StyleTextoItem" parent="WidgetTextoItem">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetTextoItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/gris_suave_texto</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!--
    BOTONES PROPORCIONALES POP UP
    -->
    <style name="StyleButtonGestion" parent="WidgetButtonGestion">
    </style>

    <style name="WidgetButtonGestion">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_view_selector_button_general</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">.99</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>


    <!--
    BOTONES PROPORCIONALES POP UP
    -->
    <style name="StyleEdittextRegistro" parent="WidgetEdittextRegistro">
        <item name="android:hint">Ingresa una descripción de la denuncia..</item>
    </style>

    <style name="WidgetEdittextRegistro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@drawable/shape_border_edittext_denuncia</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="StyleEdittextRegistroWzp" parent="WidgetEdittextRegistroWzp">
        <item name="android:hint">Ingresa una descripción de la denuncia..</item>
    </style>

    <style name="WidgetEdittextRegistroWzp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_edittext_transparent</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--
    BOTONES PROPORCIONALES POP UP
    -->
    <style name="StyleListView" parent="WidgetListView">
    </style>

    <style name="WidgetListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00000000</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>





    <!--
    ESTILOS CONFIGURACION DE CONTACTOS config_lista_contactos.xml
    -->
    <style name="StyleContentNumbers" parent="WidgetContentNumber">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetContentNumber">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:weightSum">6</item>
    </style>

    <style name="StyleInputTextNumber" parent="WidgetInputTextNumber">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetInputTextNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">9</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="StyleInputButtonNumber" parent="WidgetInputButtonNumber">
        <!-- Customize your theme here. -->
    </style>

    <style name="WidgetInputButtonNumber">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">listar</item>
        <item name="android:onClick">onClickConfig</item>
    </style>


</resources>
